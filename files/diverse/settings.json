{
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],

    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.message.badbox.show": false,

    "editor.acceptSuggestionOnEnter": "off",
    "explorer.confirmDelete": false,
    "latex-workshop.view.pdf.tab.editorGroup": "current",
    "git.enableSmartCommit": true,
    "jupyter.alwaysTrustNotebooks": true,
    "python.defaultInterpreterPath": "C:\\Program Files\\Python39\\python.exe",


    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "--shell-escape", // for inkscape compiling of SVG
                "-bibtex",  // should be true by default, but does not work without it
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "latexmk_lua",
            "command": "latexmk",
            "args": [
                "-bibtex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "%DOC%"
            ]
        }
    ],

    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk Lua",
            "tools": [
                "latexmk_lua",
            ]
        },           
        {
            "name": "pdflatex \u2192 biber \u2192 2 \u00D7 pdflatex",
            "tools": [
                "pdflatex",
                "biber",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "lualatex \u2192 biber \u2192 2 \u00D7 lualatex",
            "tools": [
                "lualatex",
                "biber",
                "lualatex",
                "lualatex"
            ]
        }
    ],

    "latex-workshop.latex.recipe.default": "lastUsed"
    
}